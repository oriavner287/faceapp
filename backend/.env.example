# Backend Environment Configuration
# SECURITY: Never commit actual .env file to version control
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Production API URL (Railway service)
PRODUCTION_API_URL=https://faceapp-lhtz.onrender.com

# Security Configuration
# CRITICAL: Change these in production with strong, unique values
SESSION_SECRET=<<SESSION_SECRET>>
ENCRYPTION_KEY=<<ENCRYPTION_KEY>>
JWT_SECRET=<<JWT_SECRET>>

# Face Detection Configuration
FACE_DETECTION_MODEL_PATH=./models
FACE_DETECTION_CONFIDENCE_THRESHOLD=0.5

# Video Fetching Configuration
VIDEO_FETCH_TIMEOUT=30000
MAX_VIDEOS_PER_SITE=10
# Security: Whitelist allowed domains for video fetching
ALLOWED_VIDEO_DOMAINS=example.com,site1.com,site2.com

# File Upload Configuration
UPLOAD_DIR=./temp
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp

# Session Configuration
SESSION_TIMEOUT=3600000
# Privacy: Automatic cleanup interval for biometric data (in milliseconds)
BIOMETRIC_DATA_TTL=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_FACE_DETECTION_MAX=20

# Security Headers Configuration
ENABLE_SECURITY_HEADERS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true